<UserControl x:Class="WorldEditor.Controls.ObjectScale"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorldEditor.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="91" d:DesignWidth="274">
    <StackPanel>        
        <CheckBox Name="chkUniform" IsChecked="True" VerticalAlignment="Center" Content="Uniform"></CheckBox>
        <WrapPanel>
        <Label Content="X:"  /> <local:NumericSpinner x:Name="valX"  HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Label Content="Y:"  /> <local:NumericSpinner x:Name="valY"  HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Label Content="Z:"  /> <local:NumericSpinner x:Name="valZ"  HorizontalAlignment="Left" VerticalAlignment="Center" />
        </WrapPanel>
    </StackPanel>
</UserControl>
